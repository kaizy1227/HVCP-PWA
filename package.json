{
  "name": "expense-tracker",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "private": true,

  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",


    // Build web tĩnh vào thư mục dist
    "build:web": "expo export --platform web --output-dir dist && if [ -d public ]; then cp -r public/* dist/; fi; node -e \"const fs=require('fs');if(fs.existsSync('scripts/inject-manifest.js'))require('./scripts/inject-manifest.js')\"",

    // Lệnh build mà Vercel sẽ gọi
    "build": "npm run build:web"
  },

  "dependencies": {
    "expo": "^52.0.40",
    "expo-constants": "~17.0.8",
    "expo-font": "~13.0.4",
    "expo-linking": "~7.0.5",
    "expo-router": "~4.0.19",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.8",
    "expo-updates": "~0.27.4",
    "expo-web-browser": "~14.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "^0.19.13"
  },

  "devDependencies": {
    "@babel/core": "^7.25.2",
    "jest-expo": "~52.0.6",
    "typescript": "~5.3.3"
  },

  "expo": {
    // để expo-doctor bỏ qua các cảnh báo bạn đã cấu hình
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-responsive-screen",
          "react-native-video-controls",
          "@types/react-native"
        ]
      }
    },
    // thêm block web để xuất manifest chuẩn
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "name": "Học Viện Cà Phê",
      "shortName": "HVCP",
      "display": "standalone",
      "startUrl": ".",
      "themeColor": "#4A2306",
      "backgroundColor": "#FFF7F0",
      "lang": "vi"
    }
  }
}
